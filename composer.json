{
  "name": "softcreatr/php-steam-guard",
  "description": "Steam Guard Code Generator for PHP",
  "keywords": [
    "Steam",
    "Steam Guard",
    "OTP",
    "2FA",
    "Two Factor Authentication"
  ],
  "homepage": "https://1-2.dev",
  "version": "0.0.1",
  "license": "ISC",
  "authors": [
    {
      "name": "Sascha Greuel",
      "email": "hello@1-2.dev"
    }
  ],
  "require": {
    "php": "^7.4 || ~8.0.0 || ~8.1.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.4"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.20",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "SoftCreatR\\SteamGuard\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SoftCreatR\\SteamGuard\\Test\\": "test/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  },
  "support": {
    "email": "hello@1-2.dev",
    "issues": "https://github.com/SoftCreatR/php-steam-guard/issues",
    "source": "https://github.com/SoftCreatR/php-steam-guard"
  }
}
